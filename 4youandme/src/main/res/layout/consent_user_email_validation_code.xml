<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingTop="?android:attr/actionBarSize"
        android:paddingBottom="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                style="@style/text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/description"
                style="@style/text_paragraph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/email"
                style="@style/text_paragraph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                android:alpha="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/email_entry"
                style="@style/text_paragraph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:singleLine="true"
                app:layout_constraintEnd_toStartOf="@id/email_validation"
                app:layout_constraintStart_toStartOf="@id/email"
                app:layout_constraintTop_toBottomOf="@id/email" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/email_validation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@id/email_entry"
                app:layout_constraintEnd_toEndOf="@id/email" />

            <View
                android:id="@+id/email_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintEnd_toEndOf="@id/email_validation"
                app:layout_constraintStart_toStartOf="@id/email_entry"
                app:layout_constraintTop_toBottomOf="@id/email_entry" />

            <View
                android:id="@+id/change_email"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/email_entry"
                app:layout_constraintEnd_toEndOf="@id/email_entry"
                app:layout_constraintStart_toStartOf="@id/email_entry"
                app:layout_constraintTop_toTopOf="@id/email_entry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/code"
                style="@style/text_paragraph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_line" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/code_entry"
                style="@style/text_paragraph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:singleLine="true"
                app:layout_constraintEnd_toStartOf="@id/code_validation"
                app:layout_constraintStart_toStartOf="@id/code"
                app:layout_constraintTop_toBottomOf="@id/code" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/code_validation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@id/code_entry"
                app:layout_constraintEnd_toEndOf="@id/code" />

            <View
                android:id="@+id/code_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintEnd_toEndOf="@id/code_validation"
                app:layout_constraintStart_toStartOf="@id/code_entry"
                app:layout_constraintTop_toBottomOf="@id/code_entry" />

            <androidx.appcompat.widget.AppCompatCheckedTextView
                android:id="@+id/wrong_code_error"
                style="@style/text_h3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:alpha="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/code_line" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wrong_code_error" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/resend"
                style="@style/text_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                app:layout_constraintBottom_toBottomOf="@id/next"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <org.fouryouandme.core.arch.loading.LoadingView
        android:id="@+id/consent_user_email_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
